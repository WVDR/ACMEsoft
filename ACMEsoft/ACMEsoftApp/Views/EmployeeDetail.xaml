<Window x:Class="ACMEsoftApp.Views.EmployeeDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACMEsoftApp.Views"
        mc:Ignorable="d"
        Title="EmployeeDetail" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="PersonDataGrid" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="top" Height="130" ItemsSource="{Binding People}" AutoGenerateColumns="False" SelectionChanged="" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Last Name" Width="SizeToCells" IsReadOnly="True" Binding="{Binding Date_Added, StringFormat=\{0:dd.MM.yy HH:mm:ss\}}"/>
                <DataGridTextColumn Header="First Name" Width="SizeToCells" IsReadOnly="True" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Date of Birth" Width="SizeToCells" IsReadOnly="True" Binding="{Binding Surname}"/>                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
